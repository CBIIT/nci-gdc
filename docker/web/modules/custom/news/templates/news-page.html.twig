<div class="checkbox-grid-container">
  <div class="checkbox-title">Filter By Category</div>
  <div class="checkbox-grid">                         
    {% set column = 1 %}                              
    {% set tcga = 0 %}                                
{% for subject in subject_tags %}
             <div class="col">
               <label>
                 <input id="term-{{ subject.target_id }}" data-term="{{ subject.target_id }}" class="term-filter"  type="checkbox" name="subject_tags[]" value="{{ subject.target_id }}">{{ subject.label }}
               </label>
             </div>
{% endfor %}
</div>
</div>
</div>

{% for node in nodes %}

<div class="news-container"  data-tags="{% for subjecttag_item in node.field_subject_tag %}{{ subjecttag_item.target_id|raw }}{% if not loop.last %},{% endif %}{% endfor %}">
  <div class="views-field views-field-date">
    {{ node.field_date.0.value|date("F j, Y") }}
  </div>
  <div class="views-field views-field-title">
    <a href="{{ path('entity.node.canonical', {'node': node.id}) }}">{{ node.title.value }}</a>
  </div>
  <div class="views-field views-field-body">
    {{ node.body.0.value|striptags|slice(0, 200) }}
  </div>
  <div class="views-field views-field-field-link">
    <a class="button-link" href="{{ path('entity.node.canonical', {'node': node.id}) }}">Read More</a>
  </div>
<hr />
</div>
{% endfor %}

